<h1>Products:</h1>
    <% @products.each do |product| %>
    <%= link_to product_path(product.id), class:'product' do %>
            <h2><%= product.title %> </h2>
           <div>
               <%= image_tag product.photo, class: "img-fluid", width: 100 if product.photo.attached?%>
            </div>
            <h3><%= product.price %> $</h3>
    <% end %>
    <% end %>